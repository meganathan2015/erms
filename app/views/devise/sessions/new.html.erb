<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <div class="account-wall">
                <h1 class="text-center login-title">Signin</h1>
                <label class="radio">
                    <input type="radio" name="user[role]" id="user_role_madmin_editor" value="admin" checked>Admin
                </label>
                <label class="radio">
                    <input type="radio" name="user[role]" id="user_role_employee_editor" value="employee">Employee</label>
                <label class="radio">
                    <input type="radio" name="user[role]" id="user_role_manager" value="manager">Manager
                </label> 
                <form class="form-signin">

                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email", require: true %>
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password", require:true %><br>
                <%= f.label :remember_me, class: "checkbox_inline" do %>
                    <%= f.check_box :remember_me %>
                    <span>Remember me</span>
                <% end %>
                <button class="btn btn-lg btn-primary btn-block" type="submit" id="sign_btn">
                    Sign in</button>
                <a class="pull-right need-help" href="/users/password/new" id="forget_password"><span>Forgot your password?</span></a><br>
                </form>
            </div>
        </div>
    </div>
</div>
<% end %>


<script type="text/javascript">
$("#sign_btn").click(function(){
    var admin = $("#user_role_madmin_editor").val();
    var uemail = $("#user_email").val();
    var pass = $("#user_password").val();
    if (admin == "" || uemail == "" || pass == "")
        {
        alert("Please fill the details...");
        return false;
        }
});
</script>