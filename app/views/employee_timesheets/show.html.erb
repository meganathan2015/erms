<div class="nw-attd">
    <h3>Show Employee Timesheet</h3>
</div>
<%= form_with(model: @employee_timesheet, local: true) do |form| %>

    <div id="project_form">
    
      <div class="form-row" id="project-row">
          <div class="form-group col-6">
          <%= form.hidden_field :user_id, value: current_user.id %>
              <%= form.text_field :title, class: "form-control", placeholder: "Title", required: true %>
          </div>
          <div class="form-group col-6">
              <%= form.text_field :description, class: "form-control", placeholder: "Description", required: true %>
          </div>
      </div>
    
      <div class="form-row" id="project-row">
          <div class="form-group col-6">
            <%= form.select(:project_name, Project.all.collect {|p| [p.project_name, p.project_name]}, {:prompt => 'Select a project', class: "form-control", required: true}) %>
          </div>
         <div class="form-row col-6">
            <%= form.text_field :time_sheet_date, class: "form-control", placeholder: "Time Sheet Date", required: true %>
         </div>
      </div>
      
      <div class="form-row" id="project-row">
          <div class="form-group col-6">
            <%= form.text_field :spend_of_time, class: "form-control", placeholder: "Spend_of_time", required: true %>
          </div>
         <div class="form-row col-6">
            <%= form.text_field :time_from, class: "form-control", placeholder: "Time From", required: true %> 
         </div>
      </div>


      <div class="form-row" id="project-row">
          <div class="form-group col-6">
            <%= form.text_field :time_to, class: "form-control", placeholder: "Time To", required: true %>
          </div>
         <div class="form-row col-6">
             <%= form.text_field :break_from, class: "form-control", placeholder: "Break From", required: true %>
         </div>
      </div>

      <div class="form-row" id="project-row">
          <div class="form-group col-6">
             <%= form.text_field :break_to, class: "form-control", placeholder: "Break To", required: true %>
          </div>
         <div class="form-row col-6">
            <%= form.text_field :total_break_time, class: "form-control", placeholder: "Total Break Time", required: true %>
         </div>
      </div>

      <div class="form-row" id="project-row">
          <div class="form-group col-6">
            <%= form.text_field :office_total_hours, class: "form-control", placeholder: "Office Total Hours", required: true %>
          </div>
         <div class="form-row col-6">
            <%= form.text_field :status, class: "form-control", placeholder: "status", required: true %>
         </div>
      </div>
    
    </div>
    <% end %>
    <div class="btn btn-lg btn-primary btn-block" >
            <%= link_to 'Edit', edit_employee_timesheet_path(@employee_timesheet), class: "btn_edit_back"%> |
            <%= link_to 'Back', employee_timesheets_path, class: "btn_edit_back"%>
    </div>