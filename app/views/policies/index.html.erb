<p id="notice"><%= notice %></p>

<% if @policies.present? %>
<h5>Policy List</h5>

<%= link_to 'New Policy', new_policy_path, class: "btn btn-small btn-new-project", id: "policy_new_btn" %>


<table class="table table-bordered">
  <thead>
    <tr class="project_tble">
      <th>Sl.no</th>
      <th>Name</th>
      <th>Download Link</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
  <% count = 0%>
    <% @policies.each do |policy| %>
      <tr>
        <td><%= count = count + 1 %></td>
        <td><%= policy.name %></td>
        <td><%= link_to "Download Policy", policy.attachment_url %></td>
        <td><%= button_to "Delete", policy, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{policy.name}?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<% else %>
<div> No Records </div>
<%= link_to 'New Policy', new_policy_path, class: "btn btn-small btn-new-project" %>

<% end %>

