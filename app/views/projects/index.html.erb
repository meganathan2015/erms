        <td><%= project.description %></td>
        <td><%= project.reporting_manager%></td>
        <td><%= project.status %></td>
        </tr>
    <% end %>
  </tbody> 
</table>
<%= paginate @projects %>

<% else %>
<p class="time_add_page">No Record</p>
<% end %>
<% end %>


