<p id="notice"><%= notice %></p>

<%= form_with(model: @project, local: true) do |form| %>

<div id="project_form">

  <div class="form-row" id="project-row">
      <div class="form-group col-6">
      <%= form.text_field :project_name, class: "form-control", placeholder: "Project Name", required: true, id: "project_name_id" %>
      </div>
      <div class="form-group col-6">
      <%= form.text_field :reporting_manager, class: "form-control", placeholder: "Reporting Manager", required: true, id: "reporting_manager_project" %>
      </div>
  </div>

  <div class="form-row" id="project-row">
      
      <div class="form-group col-6">
      <%= form.text_field :status, class: "form-control", placeholder: "Status", required: true, id: "status_project" %>
      </div>

  </div>

</div>
<% end %>
<div class="btn btn-lg btn-primary btn-block" >
        <%= link_to 'Edit', edit_project_path(@project), class: "btn_edit_back"%> |
        <%= link_to 'Back', projects_path, class: "btn_edit_back"%>
</div>