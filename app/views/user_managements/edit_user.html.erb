<div class="row gutters-sm">
            <div class="edit_user_mgmnt_1">
                <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <%@user_managements = UserManagement.find(params[:id])%>
                                <%= image_tag @user_managements.profile_pictures.url, :alt => "Admin", :class =>"rounded-circle", width: "150" unless @user_managements.profile_pictures.url.nil? %>
                                <div class="mt-3">
                                    <h4><%= @user_managements.first_name + " " + @user_managements.last_name %></h4>
                                    <p class="text-secondary mb-1">Full Stack Developer</p>
                                    <p class="text-muted font-size-sm">Chennai</p>
                                    <% if @user_managements.role == "employee" %>
                                        <%= link_to 'Change', class: "btn_edit_back"  %> |
                                        <td><%= link_to 'Delete', delete_user_user_managements_path, method: :delete, data: { confirm: 'Are you sure?' } %></td><br>
                                    <% end %>
                                </div>
                            </div>
                        </div>
                </div>
            </div>

            <%= form_with(model: @user_mgments, url: {controller: "user_managements", action: "update_user"}, method: "put", local: true) do |f| %>

            <div class="user_mgmnt_edit">
              <div class="card mb-3">
                    <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Employee No</h6>
                                </div>
                                <div class="col-sm-6 text-secondary">
                                <%= f.hidden_field :id, value: @user_managements.id %>
                                <%= f.text_field :emp_code, value: "12345", class: "form-control" %>

                                </div>
                            </div>
                            <hr>

                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Role</h6>
                                </div>
                                <div class="col-sm-6 text-secondary">
                                    <% select_list = { super_admin: 0, admin: 1, manager: 2, employee: 3 } %>
                                    <%= f.select :role, select_list, {:selected => @user_managements.role? ? @user_managements.role : 0 },  {class: "form-control", required: true, prompt:  "select role"} %>
                                </div>
                            </div>
                            <hr>

                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">First Name</h6>
                                </div>
                                <div class="col-sm-6 text-secondary">
                                    <%= f.text_field :first_name, value: @user_managements.first_name, class: "form-control" %>
                                </div>
                            </div>
                            <hr>

                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Father Name</h6>
                                </div>
                                <div class="col-sm-6 text-secondary">
                                    <%= f.text_field :last_name, value: @user_managements.last_name, class: "form-control" %>
                                </div>
                            </div>
                            <hr>

                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Mother Name</h6>
                                </div>
                                <div class="col-sm-6 text-secondary">
                                    <%= f.text_field :mother_name, value: @user_managements.mother_name, class: "form-control" %>
                                </div>
                            </div>
                            <hr>

                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Gender</h6>
                                </div>
                                <div class="col-sm-6 text-secondary">
                                    <%= f.select :gender, options_for_select(["Male", "Female"], :selected => @user_managements.gender? ? @user_managements.gender : " " ),  {class: "form-control", required: true} %>
                                </div>
                            </div>
                            <hr>

                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Blood Group</h6>
                                </div>
                                <div class="col-sm-6 text-secondary">
                                    <%= f.select :bg_group, options_for_select(["A+", "A-", "A1+", "A1-", "AB+", "AB-", "B+", "B-","O+", "O-"], :selected => @user_managements.bg_group? ? @user_managements.bg_group : " " ),  {class: "form-control", required: true} %>
                                </div>
                            </div>
                            <hr>

                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Date of Birth</h6>
                                </div>
                                <div class="col-sm-6 text-secondary">
                                    <%= f.date_field :dob, value: @user_managements.dob, class: "form-control" %>
                                </div>
                            </div>
                            <hr>

                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Date of Joining</h6>
                                </div>
                                <div class="col-sm-6 text-secondary">
                                    <%= f.date_field :doj, value: @user_managements.doj, class: "form-control" %>
                                </div>
                            </div>
                            <hr>

                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Email</h6>
                                </div>
                                <div class="col-sm-6 text-secondary">
                                    <%= f.text_field :email, value: @user_managements.email, class: "form-control" %>
                                </div>
                            </div>
                            <hr>

                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Phone</h6>
                                </div>
                                <div class="col-sm-6 text-secondary">
                                    <%= f.text_field :phone, value: "1234567890", class: "form-control" %>
                                </div>
                            </div>
                            <hr>

                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Pan No</h6>
                                </div>
                                <div class="col-sm-6 text-secondary">
                                    <%= f.text_field :pan_details, value: "123456789999", class: "form-control" %>
                                </div>
                            </div>
                            <hr>

                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Aadhar Card No</h6>
                                </div>
                                <div class="col-sm-6 text-secondary">
                                    <%= f.text_field :aadhar_details, value: "123456789999", class: "form-control" %>
                                </div>
                            </div>
                            <hr>

                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Address</h6>
                                </div>
                                <div class="col-sm-6 text-secondary">
                                    <%= f.text_area :address, value: @user_managements.address, class: "form-control" %>
                                    <%= f.hidden_field :status, value: "Active" %>
                                </div>
                            </div>
                            <hr>

                            <div class="row">
                                <div class="col-sm-12">
                                    <%= f.submit "Update Profiles", class: "btn btn-info", data: { confirm: 'Are you sure?' }%>
                                </div>
                            </div>

                    </div>
              </div>
            </div>

            <% end %>
          </div>
